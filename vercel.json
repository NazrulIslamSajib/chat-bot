{
  "version": 2,
  "builds": [
    {
      "src": "./client/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "client/dist" }
    },
    {
      "src": "./server/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/socket.io/(.*)", "destination": "/server/index.js" },
    { "source": "/(.*)", "destination": "/client/index.html" }
  ]
}
